{
  "name": "show-whitespace-cm6",
  "version": "0.2.4",
  "private": true,
  "description": "Show leading and trailing whitespace in source mode (CodeMirror6)",
  "main": "main.js",
  "scripts": {
    "dev": "node esbuild.config.mjs",
    "prebuild": "npm run prettier && eslint --fix src/",
    "build": "node esbuild.config.mjs production",
    "postbuild": "cp -v manifest.json README.md build",
    "prettier": "prettier -w 'src/**/*.ts'",
    "preversion": "npm run build",
    "version": "auto-changelog -p",
    "brat-notes": "run() { auto-changelog --stdout --hide-credit --hide-empty-releases --template .github/changelog.hbs -v $1 --starting-version $1  > release-notes.md; }; run"
  },
  "keywords": [
    "obsidian",
    "obsidian-md",
    "obsidian-plugin",
    "obsidian-md-plugin"
  ],
  "author": "ebullient",
  "repository": "github.com:ebullient/obsidian-show-whitespace-cm6",
  "license": "AGPL-3.0-only",
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.15.0",
    "@types/codemirror": "5.60.15",
    "@types/node": "^22.9.4",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "auto-changelog": "^2.5.0",
    "builtin-modules": "^4.0.0",
    "dotenv": "^16.4.5",
    "esbuild": "0.24.0",
    "esbuild-sass-plugin": "^3.3.1",
    "eslint": "^9.15.0",
    "moment": "^2.30.1",
    "obsidian": "^1.7.2",
    "prettier": "^3.3.3",
    "tslib": "^2.8.1",
    "typescript": "5.7.2"
  },
  "dependencies": {
    "@codemirror/language": "https://github.com/lishid/cm-language",
    "@codemirror/state": "^6.4.1",
    "@codemirror/view": "^6.34.3"
  },
  "auto-changelog": {
    "backfillLimit": false,
    "commitLimit": false,
    "ignoreCommitPattern": "(ðŸ”–|ðŸ”¨|ðŸ§¹|changelog|release|Update README).*"
  }
}
